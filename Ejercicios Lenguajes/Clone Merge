//------------------------------------------
//Clone
//------------------------------------------
var persona = {nombre:'Luis', Apellido1:'Corbete', Ciudad:'Santa Cruz'};

var clonePersona= clone=> Object.assign({}, clone);
console.log(persona);
const nuevaPersona=clonePersona(persona);
console.log(nuevaPersona);

